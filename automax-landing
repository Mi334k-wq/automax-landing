    document.getElementById("emailForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const language = document.getElementById("language").value;

      // Tu peux envoyer ces données vers un backend ou outil comme Zapier, Make ou MailerLite
      alert(`Merci ${name}, tu recevras un email personnalisé très bientôt !`);

      // Ex : fetch("/api/send", { method: "POST", body: JSON.stringify({name, email, language}) })
    });
